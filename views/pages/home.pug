extends ../base

block variables
  -var template = 'home'

block content
    .home   
      .home__wrapper
        each section in home.data.body  
          if section.slice_type === 'hero'
            section.hero 
              div.lockup__wrapper
                h1.lockup__title!=section.primary.hero__title[0].text
                p.lockup__text!=section.primary.hero__text[0].text.replace(/\n/g, '<br/>')
                a.lockup__button__wrapper(href="#") 
                  button.lockup__button 
                    p.lockup__button__text Join the waitlist
                    svg.lockup__button__icon(width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(d="M5.5 3L10.5 8L5.5 13" stroke="#DBE2F0" stroke-linecap="round" stroke-linejoin="round")
                  button.lockup__button__effect

          if section.slice_type === 'feature'
            .features__container
              section.features 
                div.features__wrapper
                  h2.features__title!=section.primary.features__title[0].text.replace(/\n/g, '<br/>')
                  p.features__text!=section.primary.features__text[0].text.replace(/\n/g, '<br/>')

                  .feature__wrapper
