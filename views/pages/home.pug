                        h3.feature__item__title!=item.feature__name[0].text.replace(/\n/g, '<br/>')
                        p.feature__item__text!=item.feature__description[0].text.replace(/\n/g, '<br/>')

          if section.slice_type === 'slider'
            section.slider 
              div.slider__wrapper
                h2.slider__title!=section.primary.slider__title[0].text.replace(/\n/g, '<br/>')
                p.slider__text!=section.primary.slider__text[0].text.replace(/\n/g, '<br/>')
                button.slider__button 
                    p.slider__button__text Join the waitlist
                    svg.slider__button__icon(width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(d="M5.5 3L10.5 8L5.5 13" stroke="#DBE2F0" stroke-linecap="round" stroke-linejoin="round")

                .slider__items
                  each item in section.items 
                    div.slide
                      .bar 
                        .progress
                      figure.slide__image__wrapper
                        img.slide__image(src=`${item.slide__image.url}`, alt="")
                      h3.slide__title!=item.slide__title[0].text
                      p.slide__text!=item.slide__text[0].text.replace(/\n/g, '<br/>')
          
          if section.slice_type === 'footer'
            section.footer
              .footer__wrapper
                h2.footer__text!=section.primary.footer__text[0].text.replace(/\n/g, '<br/>')
                a.footer__button__wrapper(href="#") 
                  button.footer__button 
                    p.footer__button__text Join the waitlist
                    svg.footer__button__icon(width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
